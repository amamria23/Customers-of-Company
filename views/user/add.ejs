  <body>
    <%- include('../components/dropDown.ejs') %>

    <main class="d-flex flex-nowrap">
      <%- include('../components/sidebar.ejs', {currentPage:"add"}) %>

      <div class="b-example-divider b-example-vr"></div>

      <div class="w-100">
        <%- include('../components/navBar.ejs') %>

        <form
          style="color: #adb5bd"
          style="width: 98%"
          class="row g-3 mx-auto mt-2"
          action="/user/add.html"
          method="post"
        >
          <div class="col-md-6">
            <label for="inputFirstName" class="form-label">First Name:</label>
            <input
              type="text"
              class="form-control"
              id="inputFirstName"
              placeholder="Amamria"
              name="FirstName"
            />
          </div>
          <div class="col-md-6">
            <label for="inputLastName" class="form-label">Last Name:</label>
            <input
              type="text"
              class="form-control"
              id="inputLastName"
              placeholder="Ilyess"
              name="LastName"
            />
          </div>
          <div class="col-6">
            <label for="inputEmail" class="form-label">Email:</label>
            <input
              type="email"
              class="form-control"
              id="inputEmail"
              placeholder="ilyess@gmail.com"
              name="Email"
            />
          </div>
          <div class="col-6">
            <label for="Telephone" class="form-label">Telephone:</label>
            <input
              type="number"
              class="form-control"
              id="inputTelephone"
              placeholder="20023760"
              name="Telephone"
            />
          </div>
          <div>
            <div class="col-md-6">
              <label for="inputAge" class="form-label">Age:</label>
              <input
                type="number"
                class="form-control"
                id="inputAge"
                placeholder="Your Age: ..."
                name="Age"
              />
            </div>
          </div>
          <div>
            <div class="col-md-6">
              <label for="inputState" class="form-label">Country:</label>
              <select
                id="inputState"
                class="form-select"
                aria-placeholder="choose here ..."
                name="country"
              >
                <option selected hidden disabled>chose here ...</option>
                <% country.forEach(element => { %>
                  <option><%= element %></option>
                <% }) %>
                
              </select>
            </div>
          </div>
          <div>
            <div class="col-md-6">
              <label for="inputState" class="form-label">Gender:</label>
              <select
                id="inputState"
                class="form-select"
                aria-placeholder="choose here ..."
                name="gender"
              >
                <option selected hidden disabled>chose here ...</option>
                <option>Male</option>
                <option>Female</option>
              </select>
            </div>
          </div>
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </main>
    <script src="../js/bootstrap.bundle.min.js"></script>

    <script src="../js/sidebars.js"></script>
